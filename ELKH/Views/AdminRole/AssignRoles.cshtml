@model ELKH.ViewModels.AssignRoleVM

@{
    ViewData["Title"] = "Assign Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mx-auto" style="max-width:500px;">
    <div class="card-body">

        <h3 class="fw-bold mb-4 text-center">Assign Role to User</h3>

        <form asp-action="AssignRoles" method="post">

            <div asp-validation-summary="All"
                 class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email"
                       class="form-control"
                       placeholder="Enter user email" />
            </div>

            <div class="mb-4">
                <select asp-for="RoleName"
                        asp-items="@(new SelectList(Model.Roles, "RoleName", "RoleName"))"
                        class="form-control">
                    <option value="">-- Select Role --</option>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="ListRoles"
                   class="btn btn-outline-secondary">
                    Cancel
                </a>

                <button type="submit"
                        class="btn btn-primary">
                    Assign Role
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
