@model IEnumerable<ELKH.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Manage Staff Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Manage Staff Roles</h2>

    <div>
        <a asp-controller="AdminRole"
           asp-action="AssignRoles"
           class="btn btn-outline-primary me-2">
            Assign Role
        </a>

        <a asp-controller="AdminRole"
           asp-action="CreateRole"
           class="btn btn-primary">
            + Create New Role
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-hover align-middle">

            <thead class="table-primary">
                <tr>
                    <th>Role Name</th>
                    <th class="text-center" style="width:200px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">
                            @item.RoleName
                        </td>

                        <td class="text-center">

                            <a asp-action="ViewRoleUsers"
                               asp-route-roleId="@item.RoleId"
                               class="btn btn-sm btn-outline-info me-2">
                                View
                            </a>

                            <a asp-action="EditRole"
                               asp-route-roleId="@item.RoleId"
                               class="btn btn-sm btn-outline-primary me-2">
                                Edit
                            </a>

                            <a asp-action="DeleteRole"
                               asp-route-roleId="@item.RoleId"
                               class="btn btn-sm btn-outline-danger">
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
